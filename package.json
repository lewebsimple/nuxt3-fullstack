{
  "name": "@lewebsimple/nuxt3-fullstack",
  "description": "Exploring Nuxt3 as a full stack solution",
  "version": "0.2.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nuxi build",
    "dev": "nuxi dev",
    "lint": "eslint --fix --ignore-path .gitignore .",
    "postinstall": "prisma generate",
    "release": "release-it",
    "start": "node .output/server/index.mjs"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "devDependencies": {
    "@lewebsimple/eslint-config-vue": "^0.5.2",
    "@nuxtjs/tailwindcss": "^5.0.0-4",
    "@prisma/client": "^3.10.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "graphql": "^16.3.0",
    "graphql-helix": "^1.11.0",
    "nexus": "^1.2.0",
    "nuxt3": "latest",
    "prisma": "^3.10.0",
    "release-it": "^14.12.5",
    "ts-node": "^10.5.0"
  },
  "eslintConfig": {
    "extends": "@lewebsimple/eslint-config-vue"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
